type(1_000_000) 
<class 'int'>

/*float é usado para elementos do conjunto dos reais (R), devemos usar o ponto e não virgula*/
type(50.0)
<class 'float'>

/*Ao usar a vírgula como separador*/
50, 0
(50, 0)

